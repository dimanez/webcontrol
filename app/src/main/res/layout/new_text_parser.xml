<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.webcontrol.app.siteparserfinal.NewTextParser">

    <Button
        android:id="@+id/parseN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Получить данные"
        android:layout_alignRight="@+id/listViewData"
        android:layout_alignEnd="@+id/listViewData"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#00FF00"/>
    <ListView
        android:id="@+id/listViewData"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_below="@+id/parseN"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Count"
        android:id="@+id/countN"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/listViewData"
        android:layout_alignEnd="@+id/listViewData"

        android:textColor="#00FF00"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/nextN"
        android:layout_below="@+id/parseN"
        android:layout_alignRight="@+id/listViewData"
        android:layout_alignEnd="@+id/listViewData"

        android:textColor="#00FF00"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Page: 1"
        android:id="@+id/pageN"
        android:layout_above="@+id/countN"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        android:textColor="#00FF00"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Result: "
        android:id="@+id/resultN"
        android:visibility="invisible"

        android:layout_above="@+id/listViewData"
        android:layout_centerHorizontal="true"

        android:textColor="#00FF00"/>

</RelativeLayout>
